apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: skupper-edit
  ownerReferences:
  - apiVersion: apps/v1
    kind: Deployment
    name: skupper-router
rules:
- apiGroups:
  - ""
  resources:
  - services
  verbs:
  - get
  - list
  - watch
  - create
  - update
  - delete
- apiGroups:
  - apps
  resources:
  - deployments
  verbs:
  - get
  - list
  - watch
  - create
  - update
  - delete
